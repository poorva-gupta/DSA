class Solution:
    def reverseWords(self, s: str) -> str:
        vowels='aeiou'
        words=s.split()
        count=0
        for ch in words[0]:
            if ch in vowels:
                count+=1
        for i in range(1,len(words)):
            sum=0
            for ch in words[i]:
                if ch in vowels:
                    sum+=1
            if sum==count:
                words[i]=words[i][::-1]
        return " ".join(words)

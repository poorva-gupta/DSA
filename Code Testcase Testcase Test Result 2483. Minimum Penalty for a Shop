class Solution:
    def bestClosingTime(self, customers: str) -> int:
        count=customers.count("Y")
        penalty=count
        minpenalty=count
        total=0
        for i in range(len(customers)):
            if customers[i]=="Y":
                penalty-=1
            else:
                penalty+=1
            if penalty<minpenalty:
                minpenalty=penalty
                total=i+1
        return total




        
